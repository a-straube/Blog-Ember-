<h1>Contact</h1>
<div class="col-md-3">
	<ul>
		<li>{{#link-to 'phone'}}Phone{{/link-to}}</li>
		<li>{{#link-to 'email'}}E-mail{{/link-to}}</li>
	</ul>

	{{#if messageSent}}
	<p>Thank you, your message has been received. Your confirmation number is {{confirmationNumber}}.</p>
	{{else}}
	<p><a href="#" {{action 'sendMessage'}}>Click here</a> to send a message.</p>
	{{/if}}
</div>

<div class="col-md-9">
	{{outlet}}
</div>